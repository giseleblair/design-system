{
  "name": "@zesty-io/core",
  "version": "0.3.1",
  "description": "This is a collection of React core UI components for the Zesty.io platform.",
  "author": "Zesty.io <developers@zesty.io>",
  "license": "UNLICENSED",
  "main": "dist/",
  "browser": "dist/umd.bundle.js",
  "scripts": {
    "test": "npx jest ./src/**/*test.js --config config.jest.js",
    "precommit": "pretty-quick --staged",
    "build": "npm run clean && npm run build:es2015 && npm run build:bundle && npx gulp --gulpfile config.gulp.js && cp package.json dist/package.json",
    "build:es2015": "cross-env NODE_ENV=production npx babel ./src --out-dir ./dist --ignore *.test.js",
    "build:bundle": "cross-env NODE_ENV=production npx rollup -c config.rollup.js",
    "clean": "npx rimraf dist",
    "release": "npm run build && cd dist && npm publish"
  },
  "peerDependencies": {
    "classnames": "^2.2.6",
    "react": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "react-dom": "^16.4.1",
    "moment": "^2.22.2",
    "@aeaton/react-prosemirror": "^0.21.1",
    "@aeaton/react-prosemirror-config-default": "^0.11.0",
    "codemirror": "^5.42.0",
    "react-codemirror2": "^5.1.0",
    "showdown": "^1.9.0",
    "uuid": "^3.3.2",
    "flatpickr": "^4.5.2",
    "react-flatpickr": "^3.6.4"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-jest": "23.6.0",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "babel-runtime": "6.26.0",
    "classnames": "2.2.6",
    "cross-env": "5.2.0",
    "gulp": "4.0.0",
    "gulp-concat-css": "3.1.0",
    "husky": "1.3.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "23.6.0",
    "less": "3.9.0",
    "postcss-modules": "1.4.1",
    "prettier": "1.15.3",
    "pretty-quick": "1.10.0",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-test-renderer": "16.7.0",
    "rollup": "0.68.2",
    "rollup-plugin-analyzer": "2.1.0",
    "rollup-plugin-babel": "3.0.7",
