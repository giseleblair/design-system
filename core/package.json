{
  "name": "@zesty-io/core",
  "version": "0.4.15",
  "description": "This is a collection of React core UI components for the Zesty.io platform.",
  "author": "Zesty.io <developers@zesty.io>",
  "license": "UNLICENSED",
  "main": "dist/",
  "browser": "dist/umd.bundle.js",
  "scripts": {
    "test": "npx jest ./src/**/*test.js --config config.jest.js",
    "precommit": "pretty-quick --staged",
    "build": "npm run build:es2015 && npm run build:bundle && npx gulp --gulpfile config.gulp.js && cp package.json dist/package.json",
    "build:es2015": "cross-env NODE_ENV=production npx babel ./src --out-dir ./dist --ignore *.test.js",
    "build:bundle": "cross-env NODE_ENV=production npx rollup -c config.rollup.js",
    "clean": "npx rimraf dist",
    "release": "npm run clean && npm run build && cd dist && npm publish",
    "start": "npm link && npm run build"
  },
  "dependencies": {
    "codemirror": "^5.48.0",
    "js-beautify": "^1.10.0"
  },
  "peerDependencies": {
    "classnames": "^2.2.6",
    "react": "^16.10.2",
    "react-router-dom": "^4.3.1",
    "react-dom": "^16.10.2",
    "moment": "^2.22.2",
    "@aeaton/react-prosemirror": "^0.21.1",
    "@aeaton/react-prosemirror-config-default": "^0.11.0",
    "codemirror": "^5.48.0",
    "react-codemirror2": "^5.1.0",
    "showdown": "^1.9.0",
    "uuid": "^3.3.2",
    "flatpickr": "^4.5.2",
    "react-flatpickr": "^3.6.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-function-sent": "^7.2.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.5",
    "babel-jest": "24.8.0",
    "classnames": "2.2.6",
    "cross-env": "5.2.0",
    "gulp": "4.0.2",
    "gulp-concat-css": "3.1.0",
    "husky": "2.4.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.8.0",
    "less": "3.9.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-test-renderer": "16.8.6",
    "rollup": "1.16.0",
    "rollup-plugin-analyzer": "3.0.1",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "10.0.0",
    "rollup-plugin-copy-glob": "0.3.0",
    "rollup-plugin-node-resolve": "5.0.3",
    "rollup-plugin-postcss": "2.0.3",
    "rollup-plugin-postcss-modules": "2.0.1",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-size-snapshot": "0.9.0"
  }
